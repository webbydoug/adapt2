<form action="#" method="POST">



	<label for="first-name" class="block">First name</label>

	<input type="text" name="first-name" id="first-name" autocomplete="given-name">



	<label for="last-name" class="block">Last name</label>

	<input type="text" name="last-name" id="last-name" autocomplete="family-name">



	<label for="email">Email</label>

	<input type="email" name="email" id="email" autocomplete="email">



	<label for="company" class="block">Company</label>

	<input type="text" name="company" id="company" autocomplete="organization">



	<label for="phone">Phone</label>

	<input type="tel" name="phone" id="phone" autocomplete="tel">



	<label for="participation">ISO/RTO Participation</label>

	<select id="participation" name="participation">

		<option>AESO</option>
		<option>IESO</option>
		<option>MEM</option>
		<option>NBSO</option>
		<option>PJM</option>
		<option>MISO</option>
		<option>NYISO</option>
		<option>ISONE</option>
		<option>ERCOT</option>
		<option>CAISO</option>
		<option>UK</option>
		<option>Other</option>

	</select>



	<label for="message" class="block text-sm font-semibold leading-6 text-gray-900">Message</label>

	<textarea name="message" id="message" rows="4"></textarea>



	<button type="submit">Let's talk</button>



</form>


